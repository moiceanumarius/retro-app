{% extends 'base.html.twig' %}

{% block title %}Role Management{% endblock %}

{% block page_title %}Role Management{% endblock %}

{% block stylesheets %}
    <style>
        .role-management {
            padding: 0;
        }
        
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .stats-card h3 {
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
        }
        
        .stats-card p {
            margin: 0.5rem 0 0 0;
            opacity: 0.9;
        }
        
        .modern-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 20px rgba(0,0,0,0.08);
            border: none;
            margin-bottom: 2rem;
            overflow: hidden;
        }
        
        .modern-card-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-bottom: 1px solid #dee2e6;
            padding: 1.5rem;
        }
        
        .modern-card-header h2 {
            margin: 0;
            color: #495057;
            font-weight: 600;
            font-size: 1.25rem;
        }
        
        .modern-card-body {
            padding: 1.5rem;
        }
        
        .form-group-modern {
            margin-bottom: 1.5rem;
        }
        
        .form-label-modern {
            display: block;
            margin-bottom: 0.5rem;
            color: #495057;
            font-weight: 500;
            font-size: 0.875rem;
        }
        
        .form-select-modern {
            width: 100%;
            padding: 0.5rem 0.75rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.875rem;
            color: #495057;
            background-color: white;
            transition: all 0.3s ease;
            height: 42px;
        }
        
        .form-select-modern:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .btn-modern {
            padding: 0.5rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            height: 42px;
            line-height: 1.5;
        }
        
        .btn-primary-modern {
            background: #667eea;
            color: white;
        }
        
        .btn-primary-modern:hover {
            background: #5a67d8;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }
        
        .btn-danger-modern {
            background: #ff6b6b;
            color: white;
            padding: 0.5rem 1rem;
            font-size: 0.75rem;
        }
        
        .btn-danger-modern:hover {
            background: #f56565;
            transform: translateY(-1px);
            box-shadow: 0 2px 10px rgba(255, 107, 107, 0.4);
        }
        
        .table-modern {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }
        
        .table-modern th {
            background: #f8f9fa;
            color: #495057;
            font-weight: 600;
            padding: 1rem;
            text-align: left;
            border-bottom: 2px solid #dee2e6;
            font-size: 0.875rem;
        }
        
        .table-modern td {
            padding: 1rem;
            border-bottom: 1px solid #f1f3f4;
            vertical-align: middle;
        }
        
        .table-modern tr:hover {
            background-color: #f8f9fa;
        }
        
        .badge-modern {
            padding: 0.375rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .badge-primary-modern {
            background: #667eea;
            color: white;
        }
        
        .badge-success-modern {
            background: #56ab2f;
            color: white;
        }
        
        .badge-warning-modern {
            background: #f093fb;
            color: white;
        }
        
        .badge-secondary-modern {
            background: #6c757d;
            color: white;
        }
        
        .role-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 2px 15px rgba(0,0,0,0.08);
            border: 1px solid #f1f3f4;
            transition: all 0.3s ease;
            height: 100%;
        }
        
        .role-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .role-card h5 {
            color: #495057;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }
        
        .role-card p {
            color: #6c757d;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
        }
        
        .permission-count {
            background: #667eea;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-block;
        }
        
        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: #6c757d;
        }
        
        .empty-state svg {
            width: 64px;
            height: 64px;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        
        .form-row {
            display: flex;
            gap: 1rem;
            align-items: end;
        }
        
        .form-group-modern {
            margin-bottom: 0;
        }
        
        .form-col {
            flex: 1;
        }
        
        .form-col-button {
            flex: 0 0 auto;
        }
        
        @media (max-width: 768px) {
            .form-row {
                flex-direction: column;
                align-items: stretch;
            }
            
            .form-col-button {
                flex: 1;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="role-management">
        <!-- Stats Overview -->
        <div class="stats-card">
            <h3>{{ users|length }}</h3>
            <p>Total Users</p>
        </div>
        
        <!-- Role Assignment Form -->
        <div class="modern-card">
            <div class="modern-card-header">
                <h2>Assign Role to User</h2>
            </div>
            <div class="modern-card-body">
                <form method="post" action="{{ path('app_roles_assign') }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('assign_role') }}">
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label for="user_id" class="form-label-modern">Select User</label>
                                <select name="user_id" id="user_id" class="form-select-modern" required>
                                    <option value="">Choose a user...</option>
                                    {% for user in users %}
                                        <option value="{{ user.id }}">{{ user.getFullName() }} ({{ user.email }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label for="role_id" class="form-label-modern">Select Role</label>
                                <select name="role_id" id="role_id" class="form-select-modern" required>
                                    <option value="">Choose a role...</option>
                                    {% for role in roles %}
                                        <option value="{{ role.id }}">{{ role.name }} ({{ role.code }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-col-button">
                            <button type="submit" class="btn-modern btn-primary-modern">
                                Assign Role
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Current Role Assignments -->
        <div class="modern-card">
            <div class="modern-card-header">
                <h2>Current Role Assignments</h2>
            </div>
            <div class="modern-card-body">
                <div style="overflow-x: auto;">
                    <table class="table-modern">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Assigned At</th>
                                <th>Assigned By</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% set hasAssignments = false %}
                            {% for user in users %}
                                {% for userRole in user.userRoles %}
                                    {% set hasAssignments = true %}
                                    <tr>
                                        <td>
                                            <strong>{{ user.getFullName() }}</strong>
                                        </td>
                                        <td>{{ user.email }}</td>
                                        <td>
                                            <span class="badge-modern badge-primary-modern">{{ userRole.role.name }}</span>
                                            <br>
                                            <small style="color: #6c757d; font-size: 0.75rem;">{{ userRole.role.code }}</small>
                                        </td>
                                        <td>{{ userRole.assignedAt|date('M d, Y H:i') }}</td>
                                        <td>{{ userRole.assignedBy ?? 'System' }}</td>
                                        <td>
                                            {% if userRole.isActive %}
                                                <span class="badge-modern badge-success-modern">Active</span>
                                            {% else %}
                                                <span class="badge-modern badge-secondary-modern">Inactive</span>
                                            {% endif %}
                                            {% if userRole.isExpired %}
                                                <br><span class="badge-modern badge-warning-modern">Expired</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <form method="post" action="{{ path('app_roles_remove', {'userRoleId': userRole.id}) }}" 
                                                  onsubmit="return confirm('Are you sure you want to remove this role?')" 
                                                  style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('remove_role') }}">
                                                <button type="submit" class="btn-modern btn-danger-modern">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                            
                            {% if not hasAssignments %}
                                <tr>
                                    <td colspan="7" class="empty-state">
                                        <svg fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                        </svg>
                                        <p>No role assignments found</p>
                                    </td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Available Roles -->
        <div class="modern-card">
            <div class="modern-card-header">
                <h2>Available Roles & Permissions</h2>
            </div>
            <div class="modern-card-body">
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
                    {% for role in roles %}
                        <div class="role-card">
                            <h5>{{ role.name }}</h5>
                            <p>{{ role.description }}</p>
                            <p style="margin-bottom: 1rem;">
                                <strong>Code:</strong> {{ role.code }}
                            </p>
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <span class="permission-count">
                                    {{ role.permissions|length }} Permissions
                                </span>
                                {% if role.isActive %}
                                    <span class="badge-modern badge-success-modern">Active</span>
                                {% else %}
                                    <span class="badge-modern badge-secondary-modern">Inactive</span>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}