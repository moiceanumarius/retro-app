{% extends 'base.html.twig' %}

{% block title %}Add Item - {{ retrospective.title }}{% endblock %}

{% block page_title %}Add Item{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/retrospective.css') }}">
{% endblock %}

{% block body %}
    <div class="retrospective-management">
        <!-- Header Section -->
        <div class="retrospective-header">
            <div class="header-content">
                <h1>Add Item</h1>
                <p>Add feedback to {{ retrospective.title }}</p>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_retrospectives_show', {'id': retrospective.id}) }}" class="btn btn-secondary">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                    </svg>
                    Back to Retrospective
                </a>
            </div>
        </div>

        <!-- Add Item Form -->
        <div class="retrospective-form-section">
            <div class="form-container">
                {{ form_start(form, {'attr': {'class': 'retrospective-form'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                    <small class="form-text text-muted">
                        Select the category that best fits your feedback
                    </small>
                </div>

                <div class="form-group">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                    <small class="form-text text-muted">
                        Be specific and constructive in your feedback
                    </small>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                        </svg>
                        Add Item
                    </button>
                    <a href="{{ path('app_retrospectives_show', {'id': retrospective.id}) }}" class="btn btn-secondary">Cancel</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
