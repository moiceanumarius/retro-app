{% extends 'base.html.twig' %}

{% block title %}Add Action - {{ retrospective.title }}{% endblock %}

{% block page_title %}Add Action{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/retrospective.css') }}">
{% endblock %}

{% block body %}
    <div class="retrospective-management">
        <!-- Header Section -->
        <div class="retrospective-header">
            <div class="header-content">
                <h1>Add Action Item</h1>
                <p>Create an action item for {{ retrospective.title }}</p>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_retrospectives_show', {'id': retrospective.id}) }}" class="btn btn-secondary">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                    </svg>
                    Back to Retrospective
                </a>
            </div>
        </div>

        <!-- Add Action Form -->
        <div class="retrospective-form-section">
            <div class="form-container">
                {{ form_start(form, {'attr': {'class': 'retrospective-form'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                    <small class="form-text text-muted">
                        Describe what needs to be done clearly and specifically
                    </small>
                </div>

                <div class="form-group">
                    {{ form_label(form.assignedTo) }}
                    {{ form_widget(form.assignedTo) }}
                    {{ form_errors(form.assignedTo) }}
                    <small class="form-text text-muted">
                        Select who will be responsible for this action
                    </small>
                </div>

                <div class="form-group">
                    {{ form_label(form.dueDate) }}
                    {{ form_widget(form.dueDate) }}
                    {{ form_errors(form.dueDate) }}
                    <small class="form-text text-muted">
                        When should this action be completed? (optional)
                    </small>
                </div>

                <div class="form-group">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status) }}
                    {{ form_errors(form.status) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Create Action
                    </button>
                    <a href="{{ path('app_retrospectives_show', {'id': retrospective.id}) }}" class="btn btn-secondary">Cancel</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
