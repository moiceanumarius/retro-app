{% extends 'base.html.twig' %}

{% block title %}{{ team.name }} Retrospectives{% endblock %}

{% block page_title %}{{ team.name }} Retrospectives{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/retrospective.css') }}">
{% endblock %}

{% block body %}
    <div class="retrospective-management">
        <!-- Header Section -->
        <div class="retrospective-header">
            <div class="header-content">
                <h1>{{ team.name }} Retrospectives</h1>
                <p>All retrospectives for this team</p>
            </div>
            <div class="header-actions">
                {% if app.user.hasRole('ROLE_ADMIN') or app.user.hasRole('ROLE_TEAM_LEAD') or app.user.hasRole('ROLE_FACILITATOR') %}
                <a href="{{ path('app_retrospectives_create') }}" class="btn btn-primary">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                    </svg>
                    Create Retrospective
                </a>
                {% endif %}
                <a href="{{ path('app_teams_show', {'id': team.id}) }}" class="btn btn-secondary">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                    </svg>
                    Back to Team
                </a>
            </div>
        </div>

        <!-- Team Retrospectives Overview -->
        <div class="retrospectives-overview">
            <div class="stats-card">
                <div class="stats-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="stats-content">
                    <h3>{{ retrospectives|length }}</h3>
                    <p>Total Retrospectives</p>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="stats-content">
                    <h3>{{ retrospectives|filter(r => r.isCompleted())|length }}</h3>
                    <p>Completed</p>
                </div>
            </div>
            <div class="stats-card">
                <div class="stats-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="stats-content">
                    <h3>{{ retrospectives|filter(r => r.isActive())|length }}</h3>
                    <p>Active</p>
                </div>
            </div>
        </div>

        <!-- Retrospectives List -->
        {% if retrospectives|length > 0 %}
        <div class="retrospectives-section">
            <div class="section-header">
                <h2>Team Retrospectives</h2>
                <p>All retrospectives for {{ team.name }}</p>
            </div>
            <div class="retrospectives-grid">
                {% for retrospective in retrospectives %}
                <div class="retrospective-card {{ retrospective.status }}">
                    <div class="retrospective-header">
                        <div class="retrospective-info">
                            <h3>{{ retrospective.title }}</h3>
                            {% if retrospective.description %}
                                <p>{{ retrospective.description }}</p>
                            {% endif %}
                        </div>
                        <div class="retrospective-status">
                            <span class="status-badge {{ retrospective.status }}">
                                {{ retrospective.status|title }}
                            </span>
                        </div>
                    </div>
                    <div class="retrospective-details">
                        <div class="detail">
                            <span class="detail-label">Facilitator:</span>
                            <span class="detail-value">{{ retrospective.facilitator.firstName }} {{ retrospective.facilitator.lastName }}</span>
                        </div>
                        <div class="detail">
                            <span class="detail-label">Scheduled:</span>
                            <span class="detail-value">{{ retrospective.scheduledAt|date('M d, Y H:i') }}</span>
                        </div>
                        {% if retrospective.completedAt %}
                        <div class="detail">
                            <span class="detail-label">Completed:</span>
                            <span class="detail-value">{{ retrospective.completedAt|date('M d, Y H:i') }}</span>
                        </div>
                        {% endif %}
                    </div>
                    <div class="retrospective-actions">
                        <a href="{{ path('app_retrospectives_show', {'id': retrospective.id}) }}" class="btn btn-sm btn-primary">
                            View
                        </a>
                        {% if retrospective.facilitator == app.user %}
                            {% if retrospective.isPlanned() %}
                                <a href="{{ path('app_retrospectives_start', {'id': retrospective.id}) }}" class="btn btn-sm btn-success">
                                    Start
                                </a>
                            {% elseif retrospective.isActive() %}
                                <a href="{{ path('app_retrospectives_complete', {'id': retrospective.id}) }}" class="btn btn-sm btn-warning">
                                    Complete
                                </a>
                            {% endif %}
                            <a href="{{ path('app_retrospectives_edit', {'id': retrospective.id}) }}" class="btn btn-sm btn-secondary">
                                Edit
                            </a>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <svg width="64" height="64" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"></path>
                </svg>
            </div>
            <h3>No retrospectives yet</h3>
            <p>{{ team.name }} hasn't conducted any retrospectives yet</p>
            {% if app.user.hasRole('ROLE_ADMIN') or app.user.hasRole('ROLE_TEAM_LEAD') or app.user.hasRole('ROLE_FACILITATOR') %}
            <a href="{{ path('app_retrospectives_create') }}" class="btn btn-primary">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
                Create First Retrospective
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
{% endblock %}
