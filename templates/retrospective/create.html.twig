{% extends 'base.html.twig' %}

{% block title %}Create Retrospective{% endblock %}

{% block page_title %}Create Retrospective{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/retrospective.css') }}">
{% endblock %}

{% block body %}
    <div class="retrospective-management">
        <!-- Header Section -->
        <div class="retrospective-header">
            <div class="header-content">
                <h1>Create New Retrospective</h1>
                <p>Set up a new retrospective session for your team</p>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_retrospectives') }}" class="btn btn-secondary">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                    </svg>
                    Back to Retrospectives
                </a>
            </div>
        </div>

        <!-- Create Form -->
        <div class="retrospective-form-section">
            <div class="form-container">
                {{ form_start(form, {'attr': {'class': 'retrospective-form'}}) }}
                
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.team) }}
                    {{ form_widget(form.team) }}
                    {{ form_errors(form.team) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.scheduledAt) }}
                    {{ form_widget(form.scheduledAt) }}
                    {{ form_errors(form.scheduledAt) }}
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        Create Retrospective
                    </button>
                    <a href="{{ path('app_retrospectives') }}" class="btn btn-secondary">Cancel</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
