{% extends 'base.html.twig' %}

{% block title %}Select Team - Actions{% endblock %}

{% block page_title %}Team Selection{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/team-management.css') }}">
{% endblock %}

{% block body %}
    <div class="team-management">
        <!-- Header Section -->
        <div class="team-header">
            <div class="header-content">
                <h1>Action Management</h1>
                <p>Select a team to view and manage action items from retrospectives</p>
            </div>
            <div class="header-actions">
                <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                    </svg>
                    Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Teams Overview -->
        <div class="teams-overview">
            <div class="stats-card">
                <div class="stats-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="stats-content">
                    <h3>{{ teams|length }}</h3>
                    <p>Available Teams</p>
                </div>
            </div>
            <div class="stats-card">
                {% set ownedCount = teams|filter(t => t.owner == app.user)|length %}
                <div class="stats-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.92-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0ã€‚

95-.69L9.049 2.927z"></path>
                    </svg>
                </div>
                <div class="stats-content">
                    <h3>{{ ownedCount }}</h3>
                    <p>Teams I Own</p>
                </div>
            </div>
            <div class="stats-card">
                {% set memberCount = teams|filter(t => t.owner != app.user)|length %}
                <div class="stats-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="stats-content">
                    <h3>{{ memberCount }}</h3>
                    <p>Teams I'm In</p>
                </div>
            </div>
        </div>

        <!-- Teams Grid -->
        {% if teams|length > 0 %}
        <div class="teams-section">
            <div class="section-header">
                <h2>Your Teams</h2>
                <p>Click on a team card to view and manage actions for that team</p>
            </div>
            <div class="teams-grid">
                {% for team in teams %}
                <div class="team-card {{ team.owner == app.user ? 'owned' : 'member' }}" 
                     onclick="window.location.href='{{ path('app_actions_by_team', {teamId: team.id}) }}'">
                    <div class="team-header">
                        <div class="team-info">
                            <h3>{{ team.name }}</h3>
                            {% if team.description %}
                                <p>{{ team.description }}</p>
                            {% endif %}
                        </div>
                        <div class="team-color" style="background-color: {{ team.color ?: '#667eea' }}"></div>
                    </div>
                    
                    <div class="team-stats">
                        <div class="stat">
                            <span class="stat-number">{{ team.teamMembers|length }}</span>
                            <span class="stat-label">Members</span>
                        </div>
                        <div class="stat">
                            {% set totalActions = 0 %}
                            {% for retrospective in team.retrospectives %}
                                {% set totalActions = totalActions + retrospective.actions|length %}
                            {% endfor %}
                            <span class="stat-number">{{ totalActions }}</span>
                            <span class="stat-label">Actions</span>
                        </div>
                    </div>

                    <div class="team-actions">
                        <a href="{{ path('app_actions_by_team', {teamId: team.id}) }}" class="btn btn-sm btn-primary"
                           onclick="event.stopPropagation()">
                            <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            View Actions
                        </a>
                        <a href="{{ path('app_teams_show', {'id': team.id}) }}" class="btn btn-sm btn-secondary"
                           onclick="event.stopPropagation()">
                            <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                                <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                            </svg>
                            View Team
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-icon">
                <svg width="64" height="64" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd"></path>
                </svg>
            </div>
            <h3>No teams available</h3>
            <p>You are not a member of any teams yet. Teams need to be created or you need to be invited to teams to manage actions.</p>
            {% if app.user.hasRole('ROLE_ADMIN') or app.user.hasRole('ROLE_SUPERVISOR') or app.user.hasRole('ROLE_FACILITATOR') %}
            <a href="{{ path('app_teams_create') }}" class="btn btn-primary">
                <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                </svg>
                Create Your First Team
            </a>
            {% else %}
            <p class="text-muted">Only Administrators, Team Leads, and Facilitators can create teams.</p>
            {% endif %}
        </div>
        {% endif %}
    </div>
{% endblock %}