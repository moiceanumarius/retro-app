{% extends 'base.html.twig' %}

{% block title %}Create Invitation for {{ team.name }}{% endblock %}

{% block page_title %}Create Invitation{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/team-management.css') }}">
{% endblock %}

{% block body %}
    <div class="team-create-invitation">
        <div class="create-invitation-header">
            <h1>Create Team Invitation</h1>
            <p>Invite someone to join <strong>{{ team.name }}</strong></p>
        </div>

        <div class="create-invitation-form">
            <form method="post" class="invitation-form">
                <div class="form-section">
                    <h3>Invitation Details</h3>
                    
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" required 
                               placeholder="Enter the email address of the person you want to invite">
                        <small class="form-text">The person will receive a link to join the team</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="role" class="form-label">Role</label>
                        <select id="role" name="role" class="form-control">
                            <option value="Member">Member</option>
                            <option value="Facilitator">Facilitator</option>
                        </select>
                        <small class="form-text">Assign a role to the new team member</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="message" class="form-label">Personal Message (Optional)</label>
                        <textarea id="message" name="message" class="form-control" rows="3" 
                                  placeholder="Add a personal message to the invitation..."></textarea>
                        <small class="form-text">This message will be shown to the invited person</small>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                        </svg>
                        Create Invitation
                    </button>
                    <a href="{{ path('app_teams_show', {'id': team.id}) }}" class="btn btn-secondary">
                        <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>

        <div class="invitation-info">
            <div class="info-card">
                <div class="info-icon">
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                </div>
                <div class="info-content">
                    <h4>How it works</h4>
                    <ul>
                        <li>The invited person will receive a unique link</li>
                        <li>They can click the link to view the invitation</li>
                        <li>If they don't have an account, they can register</li>
                        <li>If they have an account, they can log in and accept</li>
                        <li>The invitation expires after 7 days</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
