<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Retro App - Agile Retrospectives{% endblock %}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸ”„</text></svg>">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Adminty CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/adminty.css') }}">
    
    {% block stylesheets %}{% endblock %}
    
    <!-- Flash Popup Styles -->
    <style>
        .flash-popup {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
            min-width: 300px;
            max-width: 500px;
            padding: 0;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
            animation: slideIn 0.3s ease-out;
            opacity: 0;
            transform: translateX(100%);
        }
        
        .flash-popup.show {
            opacity: 1;
            transform: translateX(0);
        }
        
        .flash-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px 20px;
            border-radius: 8px;
        }
        
        .flash-message {
            flex: 1;
            font-weight: 500;
            font-size: 14px;
        }
        
        .flash-close {
            background: none;
            border: none;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            padding: 0;
            margin-left: 15px;
            opacity: 0.7;
            transition: opacity 0.2s;
        }
        
        .flash-close:hover {
            opacity: 1;
        }
        
        .flash-success {
            background: linear-gradient(135deg, #56ab2f, #a8e6cf);
            color: white;
        }
        
        .flash-danger {
            background: linear-gradient(135deg, #ff6b6b, #ffa8a8);
            color: white;
        }
        
        .flash-info {
            background: linear-gradient(135deg, #667eea, #a8c0ff);
            color: white;
        }
        
        .flash-warning {
            background: linear-gradient(135deg, #f093fb, #f5a9f5);
            color: white;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(100%);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        @keyframes slideOut {
            from {
                opacity: 1;
                transform: translateX(0);
            }
            to {
                opacity: 0;
                transform: translateX(100%);
            }
        }
        
        .flash-popup.hide {
            animation: slideOut 0.3s ease-in forwards;
        }
    </style>
</head>
<body>
    <div class="dashboard-layout">
        <!-- Include Sidebar Component -->
        {% include 'components/sidebar.html.twig' %}
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Include Header Component -->
            {% include 'components/header.html.twig' %}
            
            <!-- Content Body -->
            <div class="content-body">
                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-popup flash-{{ type == 'error' ? 'danger' : type }}" role="alert">
                            <div class="flash-content">
                                <span class="flash-message">{{ message }}</span>
                                <button type="button" class="flash-close" onclick="closeFlash(this)">&times;</button>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {% block body %}{% endblock %}
            </div>
            
            <!-- Include Footer Component -->
            {% include 'components/footer.html.twig' %}
        </main>
    </div>
    
    <!-- Adminty JavaScript -->
    <script src="{{ asset('assets/js/adminty.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
    
    <!-- Flash Popup JavaScript -->
    <script>
        // Show flash popups and auto-hide after 3 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const flashPopups = document.querySelectorAll('.flash-popup');
            
            flashPopups.forEach(function(popup) {
                // Show popup
                setTimeout(function() {
                    popup.classList.add('show');
                }, 100);
                
                // Auto-hide after 5 seconds
                setTimeout(function() {
                    closeFlash(popup.querySelector('.flash-close'));
                }, 5000);
            });
        });
        
        // Close flash popup function
        function closeFlash(closeButton) {
            const popup = closeButton.closest('.flash-popup');
            popup.classList.add('hide');
            
            // Remove from DOM after animation
            setTimeout(function() {
                popup.remove();
            }, 300);
        }
    </script>
    
    <!-- Mobile responsive script -->
    <script>
        // Show/hide mobile sidebar toggle
        function checkMobile() {
            const toggle = document.getElementById('sidebar-toggle');
            if (window.innerWidth <= 768) {
                toggle.style.display = 'block';
            } else {
                toggle.style.display = 'none';
            }
        }
        
        window.addEventListener('resize', checkMobile);
        checkMobile();
    </script>
</body>
</html>