<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Retro App - Agile Retrospectives{% endblock %}</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="{{ asset('assets/images/favicon-r.svg') }}">
    <link rel="apple-touch-icon" href="{{ asset('assets/images/favicon-r.svg') }}">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Adminty CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/adminty.css') }}">
    
    {% block stylesheets %}{% endblock %}
    
    <!-- Flash Messages CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/flash-messages.css') }}">
    
    <!-- Connected Users CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/connected-users.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/post-it-edit.css') }}">
    
    {% block head %}{% endblock %}
</head>
<body>
    <div class="dashboard-layout">
        <!-- Include Sidebar Component -->
        {% include 'components/sidebar.html.twig' %}
        
        <!-- Main Content -->
        <main class="main-content">
            <!-- Include Header Component -->
            {% include 'components/header.html.twig' with {'page_title': block('page_title')} %}
            
            <!-- Content Body -->
            <div class="content-body">
                <!-- Flash Messages -->
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-popup flash-{{ type == 'error' ? 'danger' : type }}" role="alert">
                            <div class="flash-content">
                                <span class="flash-message">{{ message }}</span>
                                <button type="button" class="flash-close" onclick="closeFlash(this)">&times;</button>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {% block body %}{% endblock %}
            </div>
            
            <!-- Include Footer Component -->
            {% include 'components/footer.html.twig' %}
        </main>
    </div>
    
    <!-- Adminty JavaScript -->
    <script src="{{ asset('assets/js/adminty.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
    
    <!-- Flash Popup JavaScript -->
    <script>
        // Show flash popups and auto-hide after 3 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const flashPopups = document.querySelectorAll('.flash-popup');
            
            flashPopups.forEach(function(popup) {
                // Show popup
                setTimeout(function() {
                    popup.classList.add('show');
                }, 100);
                
                // Auto-hide after 5 seconds
                setTimeout(function() {
                    closeFlash(popup.querySelector('.flash-close'));
                }, 5000);
            });
        });
        
        // Close flash popup function
        function closeFlash(closeButton) {
            const popup = closeButton.closest('.flash-popup');
            popup.classList.add('hide');
            
            // Remove from DOM after animation
            setTimeout(function() {
                popup.remove();
            }, 300);
        }
    </script>
    
    <!-- Mobile responsive script -->
    <script>
        // Show/hide mobile sidebar toggle
        function checkMobile() {
            const toggle = document.getElementById('sidebar-toggle');
            if (window.innerWidth <= 768) {
                toggle.style.display = 'block';
            } else {
                toggle.style.display = 'none';
            }
        }
        
        window.addEventListener('resize', checkMobile);
        checkMobile();
    </script>
</body>
</html>