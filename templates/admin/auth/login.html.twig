{% extends 'base.html.twig' %}

{% block title %}Admin Login - RetroApp{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row min-vh-100">
        <div class="col-md-6 d-none d-md-flex bg-primary">
            <div class="d-flex align-items-center justify-content-center w-100">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bold mb-4">Admin Panel</h1>
                    <p class="lead">Manage your RetroApp platform</p>
                    <div class="mt-5">
                        <i class="fas fa-shield-alt fa-5x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="w-100" style="max-width: 400px;">
                <div class="text-center mb-4">
                    <h2 class="h3 mb-3">Admin Sign In</h2>
                    <p class="text-muted">Enter your credentials to access the admin panel</p>
                </div>

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form method="post" class="needs-validation" novalidate>
                    {{ form_start(form) }}
                    
                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (error ? ' is-invalid' : '')}}) }}
                        {% if error %}
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control' ~ (error ? ' is-invalid' : '')}}) }}
                        {% if error %}
                            <div class="invalid-feedback">
                                Please enter your password.
                            </div>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </form>

                <div class="text-center mt-4">
                    <small class="text-muted">
                        <i class="fas fa-lock me-1"></i>
                        Secure admin access only
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.min-vh-100 {
    min-height: 100vh;
}

.bg-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}
</style>
{% endblock %}
