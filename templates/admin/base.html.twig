<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Panel - RetroApp{% endblock %}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Admin Panel CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/admin-panel.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <div class="admin-sidebar-header">
                <a href="{{ path('admin_dashboard') }}" class="admin-sidebar-brand">
                    <i class="fas fa-shield-alt"></i>
                    Admin Panel
                </a>
            </div>
            
            <nav class="admin-sidebar-nav">
                <div class="admin-nav-item">
                    <a href="{{ path('admin_dashboard') }}" 
                       class="admin-nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
                        <i class="fas fa-tachometer-alt admin-nav-icon"></i>
                        Dashboard
                    </a>
                </div>
                <div class="admin-nav-item">
                    <a href="{{ path('admin_users') }}" 
                       class="admin-nav-link {% if app.request.get('_route') starts with 'admin_users' %}active{% endif %}">
                        <i class="fas fa-users admin-nav-icon"></i>
                        Users
                    </a>
                </div>
            </nav>
            
            <div class="admin-sidebar-footer">
                <a href="{{ path('admin_logout') }}" class="admin-nav-link">
                    <i class="fas fa-sign-out-alt admin-nav-icon"></i>
                    Logout
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="admin-main-content">
            <!-- Content Header -->
            <header class="admin-content-header">
                <h1 class="admin-content-title">{% block page_title %}Admin Panel{% endblock %}</h1>
                {% block page_subtitle %}{% endblock %}
            </header>
            
            <!-- Content Body -->
            <div class="admin-content-body">
                <!-- Flash Messages -->
                <div class="admin-flash-messages">
                    {% for type, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="admin-flash-message {{ type == 'error' ? 'error' : type }}" role="alert">
                                <span>{{ message }}</span>
                                <button type="button" class="admin-flash-close" onclick="this.parentElement.remove()">&times;</button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
                
                {% block body %}{% endblock %}
            </div>
        </main>
    </div>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
