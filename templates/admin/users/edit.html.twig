{% extends 'admin/base.html.twig' %}

{% block title %}Edit User - Admin Panel{% endblock %}

{% block page_title %}Edit User{% endblock %}

{% block page_subtitle %}
    <div class="admin-content-subtitle">Manage user information and permissions</div>
{% endblock %}

{% block body %}
<!-- Back Button -->
<div style="margin-bottom: 1.5rem; display: flex; justify-content: flex-end;">
    <a href="{{ path('admin_users') }}" class="admin-btn admin-btn-secondary">
        <i class="fas fa-arrow-left"></i>
        Back to Users
    </a>
</div>

<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
    <!-- Main Form -->
    <div>
        <div class="admin-card">
            <div class="admin-card-header">
                <h2 class="admin-card-title">
                    <i class="fas fa-user-edit" style="margin-right: 0.5rem; color: var(--admin-primary);"></i>
                    User Information
                </h2>
            </div>
            <div class="admin-card-body">
                <form method="post" id="userEditForm">
                    <!-- Personal Information Section -->
                    <div class="section-header" style="margin-bottom: 1.5rem;">
                        <h2 style="font-size: 1.25rem; font-weight: 600; color: var(--admin-text-color); margin: 0 0 0.5rem 0;">
                            <i class="fas fa-user" style="margin-right: 0.5rem; color: var(--admin-primary);"></i>
                            Personal Information
                        </h2>
                        <p style="color: var(--admin-text-muted); margin: 0; font-size: 0.875rem;">Update user's basic information and contact details</p>
                    </div>
                    
                    <div class="form-card" style="background: white; border-radius: 0.5rem; padding: 1.5rem; border: 1px solid var(--admin-border-color); margin-bottom: 2rem;">
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <div>
                                <label for="firstName" class="admin-form-label">First Name</label>
                                <input type="text" 
                                       class="admin-form-control" 
                                       id="firstName" 
                                       name="firstName" 
                                       value="{{ user.firstName }}" 
                                       required>
                            </div>
                            <div>
                                <label for="lastName" class="admin-form-label">Last Name</label>
                                <input type="text" 
                                       class="admin-form-control" 
                                       id="lastName" 
                                       name="lastName" 
                                       value="{{ user.lastName }}" 
                                       required>
                            </div>
                        </div>
                        <div style="margin-top: 1rem;">
                            <label for="email" class="admin-form-label">Email Address</label>
                            <input type="email" 
                                   class="admin-form-control" 
                                   id="email" 
                                   name="email" 
                                   value="{{ user.email }}" 
                                   required>
                        </div>
                    </div>

                    <!-- Password Management Section -->
                    <div class="section-header" style="margin-bottom: 1.5rem;">
                        <h2 style="font-size: 1.25rem; font-weight: 600; color: var(--admin-text-color); margin: 0 0 0.5rem 0;">
                            <i class="fas fa-key" style="margin-right: 0.5rem; color: var(--admin-warning);"></i>
                            Password Management
                        </h2>
                        <p style="color: var(--admin-text-muted); margin: 0; font-size: 0.875rem;">Change user's password or leave empty to keep current password</p>
                    </div>
                    
                    <div class="form-card" style="background: white; border-radius: 0.5rem; padding: 1.5rem; border: 1px solid var(--admin-border-color); margin-bottom: 2rem;">
                        <div style="background-color: rgba(59, 130, 246, 0.1); padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; border-left: 4px solid var(--admin-info);">
                            <i class="fas fa-info-circle" style="color: var(--admin-info); margin-right: 0.5rem;"></i>
                            <strong>Note:</strong> Leave password fields empty to keep current password unchanged.
                        </div>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <div>
                                <label for="newPassword" class="admin-form-label">New Password</label>
                                <input type="password" 
                                       class="admin-form-control" 
                                       id="newPassword" 
                                       name="newPassword" 
                                       placeholder="Enter new password">
                                <div style="font-size: 0.75rem; color: var(--admin-text-muted); margin-top: 0.25rem;">
                                    <i class="fas fa-shield-alt" style="margin-right: 0.25rem;"></i>
                                    Password must be at least 6 characters long
                                </div>
                            </div>
                            <div>
                                <label for="confirmPassword" class="admin-form-label">Confirm Password</label>
                                <input type="password" 
                                       class="admin-form-control" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       placeholder="Confirm new password">
                                <div style="font-size: 0.75rem; color: var(--admin-text-muted); margin-top: 0.25rem;">
                                    <i class="fas fa-check-circle" style="margin-right: 0.25rem;"></i>
                                    Must match the new password
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Status Section -->
                    <div class="section-header" style="margin-bottom: 1.5rem;">
                        <h2 style="font-size: 1.25rem; font-weight: 600; color: var(--admin-text-color); margin: 0 0 0.5rem 0;">
                            <i class="fas fa-toggle-on" style="margin-right: 0.5rem; color: var(--admin-success);"></i>
                            Account Status
                        </h2>
                        <p style="color: var(--admin-text-muted); margin: 0; font-size: 0.875rem;">Manage user's account status and verification settings</p>
                    </div>
                    
                    <div class="form-card" style="background: white; border-radius: 0.5rem; padding: 1.5rem; border: 1px solid var(--admin-border-color); margin-bottom: 2rem;">
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <div style="display: flex; align-items: center; padding: 1rem; border: 1px solid var(--admin-border-color); border-radius: 0.5rem;">
                                <input type="checkbox" 
                                       id="isActive" 
                                       name="isActive" 
                                       value="1"
                                       {{ user.isActive ? 'checked' : '' }}
                                       style="margin-right: 0.75rem; transform: scale(1.2);">
                                <label for="isActive" style="margin: 0; font-weight: 500;">
                                    <i class="fas fa-user-check" style="margin-right: 0.5rem; color: var(--admin-success);"></i>Active User
                                </label>
                            </div>
                            <div style="display: flex; align-items: center; padding: 1rem; border: 1px solid var(--admin-border-color); border-radius: 0.5rem;">
                                <input type="checkbox" 
                                       id="isVerified" 
                                       name="isVerified" 
                                       value="1"
                                       {{ user.isVerified ? 'checked' : '' }}
                                       style="margin-right: 0.75rem; transform: scale(1.2);">
                                <label for="isVerified" style="margin: 0; font-weight: 500;">
                                    <i class="fas fa-envelope-check" style="margin-right: 0.5rem; color: var(--admin-primary);"></i>Email Verified
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- User Role Section -->
                    <div class="section-header" style="margin-bottom: 1.5rem;">
                        <h2 style="font-size: 1.25rem; font-weight: 600; color: var(--admin-text-color); margin: 0 0 0.5rem 0;">
                            <i class="fas fa-user-tag" style="margin-right: 0.5rem; color: var(--admin-info);"></i>
                            User Role
                        </h2>
                        <p style="color: var(--admin-text-muted); margin: 0; font-size: 0.875rem;">Assign user's role and permissions in the system</p>
                    </div>
                    
                    <div class="form-card" style="background: white; border-radius: 0.5rem; padding: 1.5rem; border: 1px solid var(--admin-border-color); margin-bottom: 2rem;">
                        <div style="background-color: rgba(59, 130, 246, 0.1); padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; border-left: 4px solid var(--admin-info);">
                            <i class="fas fa-info-circle" style="color: var(--admin-info); margin-right: 0.5rem;"></i>
                            <strong>Note:</strong> Roles are hierarchical. Select the highest role - it includes all lower permissions.
                        </div>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <div style="padding: 1rem; border: 1px solid var(--admin-border-color); border-radius: 0.5rem;">
                                <input type="radio" 
                                       id="role_member" 
                                       name="role" 
                                       value="ROLE_MEMBER"
                                       {{ 'ROLE_MEMBER' in user.roles and 'ROLE_FACILITATOR' not in user.roles and 'ROLE_SUPERVISOR' not in user.roles and 'ROLE_ADMIN' not in user.roles ? 'checked' : '' }}
                                       style="margin-right: 0.75rem;">
                                <label for="role_member" style="margin: 0; font-weight: 500;">
                                    <i class="fas fa-user" style="margin-right: 0.5rem; color: var(--admin-secondary);"></i>Member
                                </label>
                            </div>
                            <div style="padding: 1rem; border: 1px solid var(--admin-border-color); border-radius: 0.5rem;">
                                <input type="radio" 
                                       id="role_facilitator" 
                                       name="role" 
                                       value="ROLE_FACILITATOR"
                                       {{ 'ROLE_FACILITATOR' in user.roles and 'ROLE_SUPERVISOR' not in user.roles and 'ROLE_ADMIN' not in user.roles ? 'checked' : '' }}
                                       style="margin-right: 0.75rem;">
                                <label for="role_facilitator" style="margin: 0; font-weight: 500;">
                                    <i class="fas fa-users-cog" style="margin-right: 0.5rem; color: var(--admin-primary);"></i>Facilitator
                                </label>
                            </div>
                            <div style="padding: 1rem; border: 1px solid var(--admin-border-color); border-radius: 0.5rem;">
                                <input type="radio" 
                                       id="role_supervisor" 
                                       name="role" 
                                       value="ROLE_SUPERVISOR"
                                       {{ 'ROLE_SUPERVISOR' in user.roles and 'ROLE_ADMIN' not in user.roles ? 'checked' : '' }}
                                       style="margin-right: 0.75rem;">
                                <label for="role_supervisor" style="margin: 0; font-weight: 500;">
                                    <i class="fas fa-user-tie" style="margin-right: 0.5rem; color: var(--admin-info);"></i>Supervisor
                                </label>
                            </div>
                            <div style="padding: 1rem; border: 1px solid var(--admin-border-color); border-radius: 0.5rem;">
                                <input type="radio" 
                                       id="role_admin" 
                                       name="role" 
                                       value="ROLE_ADMIN"
                                       {{ 'ROLE_ADMIN' in user.roles ? 'checked' : '' }}
                                       style="margin-right: 0.75rem;">
                                <label for="role_admin" style="margin: 0; font-weight: 500;">
                                    <i class="fas fa-crown" style="margin-right: 0.5rem; color: var(--admin-warning);"></i>Administrator
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div style="display: flex; justify-content: flex-end; gap: 1rem; padding-top: 1.5rem; border-top: 1px solid var(--admin-border-color);">
                        <a href="{{ path('admin_users') }}" class="admin-btn admin-btn-secondary">
                            <i class="fas fa-times"></i>
                            Cancel
                        </a>
                        <button type="submit" class="admin-btn admin-btn-primary">
                            <i class="fas fa-save"></i>
                            Update User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- User Details Sidebar -->
    <div>
        <div class="admin-card">
            <div class="admin-card-header">
                <h2 class="admin-card-title">
                    <i class="fas fa-info-circle" style="margin-right: 0.5rem; color: var(--admin-primary);"></i>
                    User Details
                </h2>
            </div>
            <div class="admin-card-body">
                <div class="admin-user-widgets">
                    <!-- User ID Widget -->
                    <div class="admin-user-widget">
                        <div class="admin-user-widget-icon">
                            <i class="fas fa-hashtag"></i>
                        </div>
                        <div class="admin-user-widget-label">User ID</div>
                        <div class="admin-user-widget-value">#{{ user.id }}</div>
                    </div>
                    
                    <!-- Created Date Widget -->
                    <div class="admin-user-widget">
                        <div class="admin-user-widget-icon">
                            <i class="fas fa-calendar-plus"></i>
                        </div>
                        <div class="admin-user-widget-label">Created</div>
                        <div class="admin-user-widget-value">{{ user.createdAt|date('M d, Y') }}</div>
                        <div style="font-size: 0.75rem; color: var(--admin-text-muted); font-weight: 500;">{{ user.createdAt|date('H:i') }}</div>
                    </div>
                    
                    <!-- Last Updated Widget -->
                    <div class="admin-user-widget">
                        <div class="admin-user-widget-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="admin-user-widget-label">Last Updated</div>
                        <div class="admin-user-widget-value">{{ user.updatedAt|date('M d, Y') }}</div>
                        <div style="font-size: 0.75rem; color: var(--admin-text-muted); font-weight: 500;">{{ user.updatedAt|date('H:i') }}</div>
                    </div>
                    
                    <!-- Current Status Widget -->
                    <div class="admin-user-widget">
                        <div class="admin-user-widget-icon">
                            <i class="fas {{ user.isActive ? 'fa-check-circle' : 'fa-times-circle' }}"></i>
                        </div>
                        <div class="admin-user-widget-label">Account Status</div>
                        <div class="admin-user-widget-value">
                            <span class="admin-badge {{ user.isActive ? 'admin-badge-success' : 'admin-badge-danger' }}">
                                {{ user.isActive ? 'Active' : 'Inactive' }}
                            </span>
                        </div>
                    </div>
                    
                    <!-- Email Status Widget -->
                    <div class="admin-user-widget">
                        <div class="admin-user-widget-icon">
                            <i class="fas {{ user.isVerified ? 'fa-envelope-check' : 'fa-envelope' }}"></i>
                        </div>
                        <div class="admin-user-widget-label">Email Status</div>
                        <div class="admin-user-widget-value">
                            <span class="admin-badge {{ user.isVerified ? 'admin-badge-success' : 'admin-badge-warning' }}">
                                {{ user.isVerified ? 'Verified' : 'Unverified' }}
                            </span>
                        </div>
                    </div>
                    
                    <!-- Organization Widget -->
                    <div class="admin-user-widget" style="grid-column: 1 / -1;">
                        <div class="admin-user-widget-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <div class="admin-user-widget-label">Organization</div>
                        <div class="admin-user-widget-value">
                            {% set userOrg = null %}
                            {% set userOrgRole = null %}
                            {% set isOrgOwner = false %}
                            
                            {# Check if user is organization owner #}
                            {% for org in user.ownedOrganizations %}
                                {% set userOrg = org %}
                                {% set isOrgOwner = true %}
                                {% set userOrgRole = 'Owner' %}
                            {% endfor %}
                            
                            {# If not owner, check if member #}
                            {% if not userOrg %}
                                {% for membership in user.organizationMemberships %}
                                    {% if membership.isActive and membership.leftAt is null %}
                                        {% set userOrg = membership.organization %}
                                        {% set userOrgRole = membership.role %}
                                        {% set isOrgOwner = false %}
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            
                            {% if userOrg %}
                                <div style="display: flex; align-items: center; justify-content: space-between; margin-top: 0.5rem;">
                                    <span style="font-weight: 600; color: var(--admin-text-color);">{{ userOrg.name }}</span>
                                    <span class="admin-badge {{ isOrgOwner ? 'admin-badge-warning' : 'admin-badge-info' }}">
                                        {{ userOrgRole }}
                                    </span>
                                </div>
                            {% else %}
                                <span style="color: var(--admin-text-muted); font-weight: 500;">No organization</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Actions -->
        <div class="admin-card" style="margin-top: 1.5rem;">
            <div class="admin-card-header">
                <h2 class="admin-card-title">
                    <i class="fas fa-cogs" style="margin-right: 0.5rem; color: var(--admin-warning);"></i>
                    User Actions
                </h2>
            </div>
            <div class="admin-card-body">
                <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                    <button type="button" class="admin-btn admin-btn-danger" onclick="showRemoveModal()">
                        <i class="fas fa-user-minus"></i>
                        Remove user from organization & teams
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Remove from Organization Modal -->
<div id="removeFromOrgModal" class="confirm-modal">
    <div class="confirm-modal-content">
        <div class="confirm-modal-header">
            <div class="confirm-modal-icon" style="background: #fef3cd; color: #856404;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 class="confirm-modal-title">Remove User from Organization & Teams</h3>
        </div>
        <div class="confirm-modal-body">
            <div style="background-color: rgba(245, 158, 11, 0.1); padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; border-left: 4px solid var(--admin-warning);">
                <i class="fas fa-exclamation-triangle" style="color: var(--admin-warning); margin-right: 0.5rem;"></i>
                <strong>Warning:</strong> This action will remove the user from their organization and all teams.
            </div>
            <p>Are you sure you want to remove <strong>{{ user.firstName }} {{ user.lastName }}</strong> from their organization and all teams?</p>
            <div style="background-color: rgba(59, 130, 246, 0.1); padding: 1rem; border-radius: 0.5rem; border-left: 4px solid var(--admin-info);">
                <i class="fas fa-info-circle" style="color: var(--admin-info); margin-right: 0.5rem;"></i>
                <strong>Note:</strong> This action cannot be performed if the user is an organization owner or team owner. Please transfer ownership first.
            </div>
            <p style="color: var(--admin-text-muted); font-size: 0.875rem; margin-top: 1rem;">This action can be reversed by re-adding the user to an organization.</p>
        </div>
        <div class="confirm-modal-footer">
            <button type="button" class="confirm-modal-btn confirm-modal-btn-cancel" onclick="hideRemoveModal()">
                <i class="fas fa-times"></i>
                Cancel
            </button>
            <form method="post" action="{{ path('admin_users_remove_from_org', {'id': user.id}) }}" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('remove_from_org') }}">
                <button type="submit" class="confirm-modal-btn confirm-modal-btn-confirm">
                    <i class="fas fa-user-minus"></i>
                    Remove from Organization & Teams
                </button>
            </form>
        </div>
    </div>
</div>

