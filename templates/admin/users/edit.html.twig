{% extends 'admin/base.html.twig' %}

{% block title %}Edit User - Admin Panel{% endblock %}

{% block body %}
<!-- Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <div>
        <h1 class="h3 mb-1">Edit User</h1>
        <p class="text-muted mb-0">Modify user information and permissions</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i>Back to Users
        </a>
    </div>
</div>

<!-- Flash Messages -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-check-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 pb-0">
                <h5 class="card-title mb-0 text-primary">
                    <i class="fas fa-user-edit me-2"></i>User Information
                </h5>
            </div>
            <div class="card-body pt-0">
                <form method="post" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label for="firstName" class="form-label fw-semibold">First Name</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="firstName" 
                                   name="firstName" 
                                   value="{{ user.firstName }}" 
                                   required>
                            <div class="invalid-feedback">
                                Please provide a valid first name.
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="lastName" class="form-label fw-semibold">Last Name</label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="lastName" 
                                   name="lastName" 
                                   value="{{ user.lastName }}" 
                                   required>
                            <div class="invalid-feedback">
                                Please provide a valid last name.
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold">Email Address</label>
                        <input type="email" 
                               class="form-control form-control-lg" 
                               id="email" 
                               name="email" 
                               value="{{ user.email }}" 
                               required>
                        <div class="invalid-feedback">
                            Please provide a valid email address.
                        </div>
                    </div>

                    <!-- Status Section -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3 fw-semibold">Account Status</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isActive" 
                                           name="isActive" 
                                           value="1"
                                           {{ user.isActive ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium" for="isActive">
                                        <i class="fas fa-user-check me-2 text-success"></i>Active User
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isVerified" 
                                           name="isVerified" 
                                           value="1"
                                           {{ user.isVerified ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium" for="isVerified">
                                        <i class="fas fa-envelope-check me-2 text-primary"></i>Email Verified
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Roles Section -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3 fw-semibold">User Roles</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="role_member" 
                                                   name="roles[]" 
                                                   value="ROLE_MEMBER"
                                                   {{ 'ROLE_MEMBER' in user.roles ? 'checked' : '' }}>
                                            <label class="form-check-label fw-medium" for="role_member">
                                                <i class="fas fa-user me-2 text-secondary"></i>Member
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="role_facilitator" 
                                                   name="roles[]" 
                                                   value="ROLE_FACILITATOR"
                                                   {{ 'ROLE_FACILITATOR' in user.roles ? 'checked' : '' }}>
                                            <label class="form-check-label fw-medium" for="role_facilitator">
                                                <i class="fas fa-users-cog me-2 text-primary"></i>Facilitator
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="role_supervisor" 
                                                   name="roles[]" 
                                                   value="ROLE_SUPERVISOR"
                                                   {{ 'ROLE_SUPERVISOR' in user.roles ? 'checked' : '' }}>
                                            <label class="form-check-label fw-medium" for="role_supervisor">
                                                <i class="fas fa-user-tie me-2 text-info"></i>Supervisor
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card border-0 bg-light">
                                    <div class="card-body p-3">
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="role_admin" 
                                                   name="roles[]" 
                                                   value="ROLE_ADMIN"
                                                   {{ 'ROLE_ADMIN' in user.roles ? 'checked' : '' }}>
                                            <label class="form-check-label fw-medium" for="role_admin">
                                                <i class="fas fa-crown me-2 text-warning"></i>Administrator
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex justify-content-between pt-3 border-top">
                        <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Update User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 pb-0">
                <h5 class="card-title mb-0 text-primary">
                    <i class="fas fa-info-circle me-2"></i>User Details
                </h5>
            </div>
            <div class="card-body pt-0">
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-hashtag me-2 text-muted"></i>
                        <strong class="text-muted">User ID</strong>
                    </div>
                    <span class="fs-5 fw-semibold">#{{ user.id }}</span>
                </div>
                
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-calendar-plus me-2 text-muted"></i>
                        <strong class="text-muted">Created</strong>
                    </div>
                    <span class="text-dark">{{ user.createdAt|date('M d, Y H:i') }}</span>
                </div>
                
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-clock me-2 text-muted"></i>
                        <strong class="text-muted">Last Updated</strong>
                    </div>
                    <span class="text-dark">{{ user.updatedAt|date('M d, Y H:i') }}</span>
                </div>
                
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-toggle-on me-2 text-muted"></i>
                        <strong class="text-muted">Current Status</strong>
                    </div>
                    {% if user.isActive %}
                        <span class="badge bg-success fs-6 px-3 py-2">
                            <i class="fas fa-check-circle me-1"></i>Active
                        </span>
                    {% else %}
                        <span class="badge bg-danger fs-6 px-3 py-2">
                            <i class="fas fa-times-circle me-1"></i>Inactive
                        </span>
                    {% endif %}
                </div>
                
                <div class="mb-0">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-envelope me-2 text-muted"></i>
                        <strong class="text-muted">Email Status</strong>
                    </div>
                    {% if user.isVerified %}
                        <span class="badge bg-success fs-6 px-3 py-2">
                            <i class="fas fa-check-circle me-1"></i>Verified
                        </span>
                    {% else %}
                        <span class="badge bg-warning fs-6 px-3 py-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>Unverified
                        </span>
                    {% endif %}
                </div>
                
                <!-- Login as User -->
                <div class="mt-4 pt-3 border-top">
                    <a href="{{ path('app_login', {'email': user.email}) }}" 
                       target="_blank" 
                       class="btn btn-outline-primary btn-sm w-100">
                        <i class="fas fa-sign-in-alt me-2"></i>Login as User
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Custom styles for the edit page */
.form-control-lg {
    border-radius: 8px;
    border: 1px solid #e0e0e0;
    transition: all 0.2s ease;
}

.form-control-lg:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.1);
}

.form-switch .form-check-input {
    width: 2.5rem;
    height: 1.25rem;
    border-radius: 1rem;
}

.form-switch .form-check-input:checked {
    background-color: #28a745;
    border-color: #28a745;
}

.card.bg-light {
    background-color: #f8f9fa !important;
    transition: all 0.2s ease;
}

.card.bg-light:hover {
    background-color: #e9ecef !important;
    transform: translateY(-1px);
}

.btn-lg {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    border-radius: 8px;
}

.badge {
    font-size: 0.875rem;
    font-weight: 500;
}

.text-primary {
    color: #007bff !important;
}

.fw-semibold {
    font-weight: 600 !important;
}

.fw-medium {
    font-weight: 500 !important;
}
</style>
{% endblock %}
