{% extends 'admin/base.html.twig' %}

{% block title %}Edit User - Admin Panel{% endblock %}

{% block body %}
<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-1 text-gray-800">Edit User</h1>
        <p class="text-muted mb-0">Manage user information and permissions</p>
    </div>
    <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Users
    </a>
</div>

<!-- Flash Messages -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-check-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

<div class="row">
    <!-- Main Form -->
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="card-title mb-0 text-gray-800">
                    <i class="fas fa-user-edit me-2 text-primary"></i>User Information
                </h5>
            </div>
            <div class="card-body">
                <form method="post" class="needs-validation" novalidate>
                    <!-- Personal Information -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">Personal Information</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label fw-medium text-gray-700">First Name</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="firstName" 
                                       name="firstName" 
                                       value="{{ user.firstName }}" 
                                       required>
                                <div class="invalid-feedback">
                                    Please provide a valid first name.
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label fw-medium text-gray-700">Last Name</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="lastName" 
                                       name="lastName" 
                                       value="{{ user.lastName }}" 
                                       required>
                                <div class="invalid-feedback">
                                    Please provide a valid last name.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-medium text-gray-700">Email Address</label>
                            <input type="email" 
                                   class="form-control" 
                                   id="email" 
                                   name="email" 
                                   value="{{ user.email }}" 
                                   required>
                            <div class="invalid-feedback">
                                Please provide a valid email address.
                            </div>
                        </div>
                    </div>

                    <!-- Password Change -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">Password Management</h6>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> Leave password fields empty to keep current password unchanged.
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="newPassword" class="form-label fw-medium text-gray-700">New Password</label>
                                <input type="password" 
                                       class="form-control" 
                                       id="newPassword" 
                                       name="newPassword" 
                                       placeholder="Enter new password">
                                <div class="form-text">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Password must be at least 6 characters long
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label fw-medium text-gray-700">Confirm Password</label>
                                <input type="password" 
                                       class="form-control" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       placeholder="Confirm new password">
                                <div class="form-text">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Must match the new password
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Status -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">Account Status</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isActive" 
                                           name="isActive" 
                                           value="1"
                                           {{ user.isActive ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium text-gray-700" for="isActive">
                                        <i class="fas fa-user-check me-2 text-success"></i>Active User
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isVerified" 
                                           name="isVerified" 
                                           value="1"
                                           {{ user.isVerified ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium text-gray-700" for="isVerified">
                                        <i class="fas fa-envelope-check me-2 text-primary"></i>Email Verified
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- User Roles -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">User Role</h6>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> Roles are hierarchical. Select the highest role - it includes all lower permissions.
                        </div>
                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_member" 
                                           name="role" 
                                           value="ROLE_MEMBER"
                                           {{ 'ROLE_MEMBER' in user.roles and 'ROLE_FACILITATOR' not in user.roles and 'ROLE_SUPERVISOR' not in user.roles and 'ROLE_ADMIN' not in user.roles ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium text-gray-700" for="role_member">
                                        <i class="fas fa-user me-2 text-secondary"></i>Member
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_facilitator" 
                                           name="role" 
                                           value="ROLE_FACILITATOR"
                                           {{ 'ROLE_FACILITATOR' in user.roles and 'ROLE_SUPERVISOR' not in user.roles and 'ROLE_ADMIN' not in user.roles ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium text-gray-700" for="role_facilitator">
                                        <i class="fas fa-users-cog me-2 text-primary"></i>Facilitator
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_supervisor" 
                                           name="role" 
                                           value="ROLE_SUPERVISOR"
                                           {{ 'ROLE_SUPERVISOR' in user.roles and 'ROLE_ADMIN' not in user.roles ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium text-gray-700" for="role_supervisor">
                                        <i class="fas fa-user-tie me-2 text-info"></i>Supervisor
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_admin" 
                                           name="role" 
                                           value="ROLE_ADMIN"
                                           {{ 'ROLE_ADMIN' in user.roles ? 'checked' : '' }}>
                                    <label class="form-check-label fw-medium text-gray-700" for="role_admin">
                                        <i class="fas fa-crown me-2 text-warning"></i>Administrator
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- User Details Sidebar -->
    <div class="col-lg-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom">
                <h5 class="card-title mb-0 text-gray-800">
                    <i class="fas fa-info-circle me-2 text-primary"></i>User Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <!-- User ID Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-primary">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">User ID</div>
                                <div class="widget-value">#{{ user.id }}</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Created Date Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-success">
                                <i class="fas fa-calendar-plus"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Created</div>
                                <div class="widget-value">{{ user.createdAt|date('M d, Y') }}</div>
                                <div class="widget-subtext">{{ user.createdAt|date('H:i') }}</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Last Updated Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-info">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Last Updated</div>
                                <div class="widget-value">{{ user.updatedAt|date('M d, Y') }}</div>
                                <div class="widget-subtext">{{ user.updatedAt|date('H:i') }}</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Current Status Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon {{ user.isActive ? 'bg-success' : 'bg-danger' }}">
                                <i class="fas {{ user.isActive ? 'fa-check-circle' : 'fa-times-circle' }}"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Account Status</div>
                                <div class="widget-value">
                                    <span class="status-badge {{ user.isActive ? 'status-active' : 'status-inactive' }}">
                                        {{ user.isActive ? 'Active' : 'Inactive' }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Email Status Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon {{ user.isVerified ? 'bg-success' : 'bg-warning' }}">
                                <i class="fas {{ user.isVerified ? 'fa-envelope-check' : 'fa-envelope' }}"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Email Status</div>
                                <div class="widget-value">
                                    <span class="status-badge {{ user.isVerified ? 'status-verified' : 'status-unverified' }}">
                                        {{ user.isVerified ? 'Verified' : 'Unverified' }}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

