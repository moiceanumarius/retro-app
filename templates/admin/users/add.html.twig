{% extends 'admin/base.html.twig' %}

{% block title %}Add User - Admin Panel{% endblock %}

{% block body %}
<!-- Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
    <div>
        <h1 class="h3 mb-1">Add New User</h1>
        <p class="text-muted mb-0">Create a new user account</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i>Back to Users
        </a>
    </div>
</div>

<!-- Flash Messages -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-check-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
{% endfor %}

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom-0 pb-0">
                <h5 class="card-title mb-0 text-gray-800">
                    <i class="fas fa-user-plus me-2 text-primary"></i>User Information
                </h5>
            </div>
            <div class="card-body pt-0">
                <form method="post" class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label for="firstName" class="form-label fw-semibold text-gray-700">First Name <span class="text-danger">*</span></label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="firstName" 
                                   name="firstName" 
                                   placeholder="Enter first name"
                                   required>
                            <div class="invalid-feedback">
                                Please provide a valid first name.
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="lastName" class="form-label fw-semibold text-gray-700">Last Name <span class="text-danger">*</span></label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="lastName" 
                                   name="lastName" 
                                   placeholder="Enter last name"
                                   required>
                            <div class="invalid-feedback">
                                Please provide a valid last name.
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold text-gray-700">Email Address <span class="text-danger">*</span></label>
                        <input type="email" 
                               class="form-control form-control-lg" 
                               id="email" 
                               name="email" 
                               placeholder="Enter email address"
                               required>
                        <div class="invalid-feedback">
                            Please provide a valid email address.
                        </div>
                    </div>

                    <!-- Password Fields -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">Password</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label fw-medium text-gray-700">Password <span class="text-danger">*</span></label>
                                <input type="password" 
                                       class="form-control" 
                                       id="password" 
                                       name="password" 
                                       placeholder="Enter password"
                                       minlength="6"
                                       required>
                                <div class="form-text">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Password must be at least 6 characters long
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label fw-medium text-gray-700">Confirm Password <span class="text-danger">*</span></label>
                                <input type="password" 
                                       class="form-control" 
                                       id="confirmPassword" 
                                       name="confirmPassword" 
                                       placeholder="Confirm password"
                                       minlength="6"
                                       required>
                                <div class="form-text">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Must match the password above
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Account Status -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">Account Status</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isActive" 
                                           name="isActive" 
                                           value="1"
                                           checked>
                                    <label class="form-check-label fw-medium text-gray-700" for="isActive">
                                        <i class="fas fa-user-check me-2 text-success"></i>Active User
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" 
                                           type="checkbox" 
                                           id="isVerified" 
                                           name="isVerified" 
                                           value="1"
                                           checked>
                                    <label class="form-check-label fw-medium text-gray-700" for="isVerified">
                                        <i class="fas fa-envelope-check me-2 text-primary"></i>Email Verified
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- User Roles -->
                    <div class="mb-4">
                        <h6 class="text-gray-600 mb-3 fw-semibold">User Role</h6>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> Roles are hierarchical. Select the highest role - it includes all lower permissions.
                        </div>
                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_member" 
                                           name="role" 
                                           value="ROLE_MEMBER"
                                           checked>
                                    <label class="form-check-label fw-medium text-gray-700" for="role_member">
                                        <i class="fas fa-user me-2 text-secondary"></i>Member
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_facilitator" 
                                           name="role" 
                                           value="ROLE_FACILITATOR">
                                    <label class="form-check-label fw-medium text-gray-700" for="role_facilitator">
                                        <i class="fas fa-users-cog me-2 text-primary"></i>Facilitator
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_supervisor" 
                                           name="role" 
                                           value="ROLE_SUPERVISOR">
                                    <label class="form-check-label fw-medium text-gray-700" for="role_supervisor">
                                        <i class="fas fa-user-tie me-2 text-info"></i>Supervisor
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check p-3 border rounded">
                                    <input class="form-check-input" 
                                           type="radio" 
                                           id="role_admin" 
                                           name="role" 
                                           value="ROLE_ADMIN">
                                    <label class="form-check-label fw-medium text-gray-700" for="role_admin">
                                        <i class="fas fa-crown me-2 text-warning"></i>Administrator
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                        <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-bottom">
                <h5 class="card-title mb-0 text-gray-800">
                    <i class="fas fa-info-circle me-2 text-primary"></i>User Creation Info
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <!-- Required Fields Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Required</div>
                                <div class="widget-value">All Fields</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Password Policy Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-info">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Min Length</div>
                                <div class="widget-value">6 Chars</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Default Status Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-success">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Default</div>
                                <div class="widget-value">Active</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Email Verification Widget -->
                    <div class="col-6">
                        <div class="info-widget">
                            <div class="widget-icon bg-primary">
                                <i class="fas fa-envelope-check"></i>
                            </div>
                            <div class="widget-content">
                                <div class="widget-label">Default</div>
                                <div class="widget-value">Verified</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

