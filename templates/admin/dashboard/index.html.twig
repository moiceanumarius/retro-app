{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard - RetroApp{% endblock %}

{% block page_title %}Dashboard{% endblock %}

{% block page_subtitle %}
    <div class="admin-content-subtitle">Welcome back, {{ app.user.firstName }} {{ app.user.lastName }}</div>
{% endblock %}

{% block body %}
    <!-- Statistics Cards -->
    <div class="admin-stats-grid">
        <div class="admin-stat-card">
            <div class="admin-stat-header">
                <div class="admin-stat-title">Total Admins</div>
                <div class="admin-stat-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
            </div>
            <h3 class="admin-stat-value">{{ stats.total_admins }}</h3>
        </div>

        <div class="admin-stat-card success">
            <div class="admin-stat-header">
                <div class="admin-stat-title">Active Admins</div>
                <div class="admin-stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
            </div>
            <h3 class="admin-stat-value">{{ stats.active_admins }}</h3>
        </div>
    </div>

    <!-- Recent Admins Table -->
    <div class="admin-card">
        <div class="admin-card-header">
            <h2 class="admin-card-title">Recent Admin Users</h2>
        </div>
        <div class="admin-card-body">
            <div class="admin-table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for admin in recent_admins %}
                        <tr>
                            <td>
                                <div style="display: flex; align-items: center;">
                                    <div style="width: 40px; height: 40px; border-radius: 50%; background-color: rgba(99, 102, 241, 0.1); display: flex; align-items: center; justify-content: center; margin-right: 0.75rem;">
                                        <i class="fas fa-user" style="color: var(--admin-primary);"></i>
                                    </div>
                                    <div>
                                        <div style="font-weight: 500;">{{ admin.firstName }} {{ admin.lastName }}</div>
                                    </div>
                                </div>
                            </td>
                            <td>{{ admin.email }}</td>
                            <td>
                                {% if admin.isActive %}
                                    <span class="admin-badge admin-badge-success">Active</span>
                                {% else %}
                                    <span class="admin-badge admin-badge-danger">Inactive</span>
                                {% endif %}
                            </td>
                            <td>{{ admin.createdAt|date('M d, Y') }}</td>
                            <td>
                                {% if admin.lastLoginAt %}
                                    {{ admin.lastLoginAt|date('M d, Y H:i') }}
                                {% else %}
                                    <span style="color: var(--admin-text-muted);">Never</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="admin-text-center" style="color: var(--admin-text-muted); padding: 2rem;">
                                <i class="fas fa-users" style="font-size: 2rem; margin-bottom: 1rem; opacity: 0.5;"></i>
                                <div>No admin users found</div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
