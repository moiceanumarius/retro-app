# Production Environment Configuration
APP_ENV=prod
APP_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION
APP_DEBUG=false

# Database configuration for production
DATABASE_URL="mysql://retro_user:retro_password@mysql:3306/retro_app?serverVersion=8.0&charset=utf8mb4"

# Mailer configuration for production
MAILER_DSN=smtp://localhost:1025

# Cache configuration for production
CACHE_DSN=redis://redis:6379

# Session configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=3600

# Logging configuration
LOG_LEVEL=error

# Production specific settings
SYMFONY_DECRYPTION_SECRET=CHANGE_THIS_DECRYPTION_SECRET

# Security settings
TRUSTED_PROXIES=127.0.0.1,REMOTE_ADDR
TRUSTED_HOSTS=localhost,127.0.0.1

# Performance settings
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=256
